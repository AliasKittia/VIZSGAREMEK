<Window x:Class="Karbantarto.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Karbantarto"
        mc:Ignorable="d"
        x:Name="fomenu"
        Title="Karbantartó rendszer" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <!-- Oldalsáv -->
            <ColumnDefinition Width="*"/>
            <!-- Tartalom -->
        </Grid.ColumnDefinitions>

        <!-- Oldalsáv -->
        <StackPanel Grid.Column="0" Background="LightBlue" HorizontalAlignment="Left" Width="160">

            <Button Name="FoOldalBTN"  Content="Főoldal" Margin="10,20,10,10" Click="FoOldalBTN_Click"/>

            <Button Name="KarakterekBTN" Content="Karakterek" Margin="10" Click="KarakterekBTN_Click"/>

            <Button Name="ClassokBTN" Content="Osztályok" Margin="10" Click="ClassokBTN_Click"/>

            <Button Name="ItemekBTN" Content="Tárgyak" Margin="10" Click="ItemekBTN_Click"/>

            <Button Name="AnomaliakBTN" Content="Anomáliák" Margin="10" Click="AnomaliakBTN_Click"/>

            <Button Name="TraitekBTN" Content="Erősítések" Margin="10" Click="TraitekBTN_Click"/>

            <Button Name="CsapatTervezoBTN" Content="Csapat tervező" Margin="10" Click="CsapatTervezoBTN_Click"/>

            <Button Name="KilepesBTN" Content="Kilépés" Margin="10" Click="KilepesBTN_Click"/>

            <Button Name="KijelentkezesBTN" Content="Kijelentkezés" Margin="10" Click="KijelentkezesBTN_Click"/>

        </StackPanel>

        <DockPanel  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Name="FooldalUdvozloTBX"  Text="Üdvözlünk az alkalmazásban!" FontSize="25" 
           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Name="FooldalSzovegTBX" Text="Állítsd össze a legerősebb csapatot, stratégiázz okosan, és válj a legjobbá! "/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
