<Window x:Class="Karbantarto.Windows.Felhasznalok"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Karbantarto.Windows"
        mc:Ignorable="d"
        Title="Felhasznalok" Height="480" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel >
            <Label Content="Id"/>
            <TextBox x:Name="txb_Id" IsReadOnly="True"/>
            <Label Content="Felhasználónév"/>
            <TextBox x:Name="txb_FelhasznaloNev" TextWrapping="NoWrap"/>
            <Label Content="Jelszó"/>
            <PasswordBox x:Name="pwd_Jelszo"/>
            <Label Content="Teljes név"/>
            <TextBox x:Name="txb_TeljesNev"/>
            <Label Content="E-mail cím"/>
            <TextBox x:Name="txb_Email"/>
            <Label Content="Jogosultság"/>
            <TextBox x:Name="txb_Jogosultsag"/>
            <Label Content="Aktív"/>
            <TextBox x:Name="txb_Aktiv" />
            <Label Content="Regisztráció dátuma"/>
            <TextBox x:Name="txb_RegisztracioDatuma" />
            <!--Label Content="Profilkép útvonal"/-->
            <Button Content="Fénykép kiválasztása" Click="FotoKivalasztas"/>
            <TextBox x:Name="txb_PfrofilkepUtvonal" IsEnabled="False"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Új" 
                Click="UjFelhasznalo" FontWeight="Bold"/>
                <Button Content="Törlés"
                Click="FelhasznaloTorol" FontWeight="Bold"/>
                <Button Content="Módosítás" 
                Click="FelhasznaloModosit" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
        <DataGrid Name="dtg_Users"
          AutoGenerateColumns="False"  
          Grid.Column="1"                  
          SelectionChanged="dtgAdatSelChanged"
          IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Felhasználónév" Binding="{Binding FelhasznaloNev}" />
                <DataGridTextColumn Header="Teljes név" Binding="{Binding TeljesNev}" />
                <DataGridTextColumn Header="E-mail" Binding="{Binding Email}" />
                <DataGridTextColumn Header="Jogosultsági szint" Binding="{Binding Jogosultsag}" />
                <DataGridTextColumn Header="Aktív" Binding="{Binding Aktiv}" />
                <DataGridTextColumn Header="Regisztració dátuma" Binding="{Binding RegisztracioDatuma}" />
                <DataGridTextColumn Header="Fénykép útvonal" Binding="{Binding ProfilKepUtvonal}" />
                <!-- A többi mező nem lesz megjelenítve -->
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
