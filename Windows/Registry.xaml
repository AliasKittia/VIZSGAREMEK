<Window x:Class="Karbantarto.Windows.Registry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Karbantarto.Windows"
        mc:Ignorable="d"
        Title="Registry" Height="450" Width="500">
    <Grid>
        <DockPanel>

            <StackPanel Name="REGISTRYSTACK" VerticalAlignment="Center" >
                <!-- Teljes név -->
                <TextBlock Name="FullNameTBK" Text="Teljes név" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"  />
                <TextBox Name="FullNameTBX" FontSize="15" Width="200" Height="30" />

                <!-- Login/User/felhasználó név -->
                <TextBlock Name="LoginNameInRegistryTBK"  Text="Felhasználó név" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,10"/>
                <TextBox Name="LoginNameInRegistryTBX" FontSize="15" Width="200" Height="30" Margin="0,0,0,10" />

                <!-- Email -->                
                <TextBlock Name="EmailTBK" Text="Email" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,10" />
                <TextBox Name="EmailTBX" FontSize="15" Width="200" Height="30" />

                <!-- Jelszó -->
                <DockPanel HorizontalAlignment="Center" Margin="0,20,0,0">
                <StackPanel>
                <TextBlock Name="PasswordInRegistryTBK" Text="Jelszó" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"  />
                <TextBox Name="LoginPasswordInRegistryTBX" FontSize="15" Width="200" Height="30" />
                </StackPanel>
                    
                <StackPanel HorizontalAlignment="Center" Margin="20,0,0,0">
                <TextBlock Name="PasswordInRegistry2TBK" Text="Jelszó megerősítése" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"  />
                <TextBox Name="LoginPasswordInRegistry2TBX" FontSize="15" Width="200" Height="30" Margin="0,0,0,0" />
                </StackPanel>
        </DockPanel>


                <DockPanel HorizontalAlignment="center" Margin="0,-30,0,0">
                    <Button Name="VisszaBTN" Content="Vissza" FontSize="25" Width="150" Height="50"  VerticalAlignment="Bottom" Margin="0,50,20,0" Click="VisszaBTN_Click"/>
                    <Button Name="RegistrySaveBTN" Content="Regisztráció" FontSize="25" Width="150" Height="50" VerticalAlignment="Bottom" Margin="0,50,0,0" Click="RegistrySaveBTN_Click"/>
                </DockPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
