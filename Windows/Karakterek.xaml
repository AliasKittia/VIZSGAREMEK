<Window x:Class="Karbantarto.Windows.Karakterek"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Karbantarto.Windows"
        mc:Ignorable="d"
        Title="Karakterek" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Oldalsáv -->
        <StackPanel Grid.Column="0" Background="LightBlue" Width="200">
            <Button Name="FoOldalBTN" Content="Főoldal" Margin="10,20,10,10" Click="FoOldalBTN_Click"/>
            <Button Name="KarakterekBTN" Content="Karakterek" Margin="10" Click="KarakterekBTN_Click"/>
            <Button Name="ClassokBTN" Content="Osztályok" Margin="10" Click="ClassokBTN_Click"/>
            <Button Name="ItemekBTN" Content="Tárgyak" Margin="10" Click="ItemekBTN_Click"/>
            <Button Name="AnomaliakBTN" Content="Anomáliák" Margin="10" Click="AnomaliakBTN_Click"/>
            <Button Name="TraitekBTN" Content="Erősítések" Margin="10" Click="TraitekBTN_Click"/>
            <Button Name="CsapatTervezoBTN" Content="Csapat tervező" Margin="10" Click="CsapatTervezoBTN_Click"/>
            <Button Name="KilepesBTN" Content="Kilépés" Margin="10" Click="KilepesBTN_Click"/>
            <Button Name="KijelentkezesBTN" Content="Kijelentkezés" Margin="10" Click="KijelentkezesBTN_Click"/>
        </StackPanel>

        <!-- Karakterek listája kártyákkal -->
        <ItemsControl Grid.Column="1" Name="KarakterListBox">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Border x:Name="FrontCard" Background="White" CornerRadius="10" Padding="10" Width="150" Height="200" MouseDown="FrontCard_MouseDown">
                            <StackPanel>
                                <Image Source="{Binding Characterimageblob}" Height="100" Stretch="Uniform"/>
                                <TextBlock x:Name="CharacterNameText" Text="{Binding CharacterName}" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="{Binding Cost}" FontSize="14"/>
                            </StackPanel>
                        </Border>

                        <Border x:Name="BackCard" Background="LightGray" CornerRadius="10" Padding="10" Width="150" Height="200" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="{Binding AbilityName}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Ability}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
