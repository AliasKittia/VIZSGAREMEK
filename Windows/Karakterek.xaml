<Window x:Class="Karbantarto.Windows.Karakterek"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Karbantarto.Windows"
        mc:Ignorable="d"
        Title="Karakterek" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Oldalsáv -->
        <StackPanel Grid.Column="0" Background="LightBlue" Width="200">
            <Button Name="FoOldalBTN" Content="Főoldal" Margin="10,20,10,10" Click="FoOldalBTN_Click"/>
            <Button Name="KarakterekBTN" Content="Karakterek" Margin="10" Click="KarakterekBTN_Click"/>
            <Button Name="ClassokBTN" Content="Osztályok" Margin="10" Click="ClassokBTN_Click"/>
            <Button Name="ItemekBTN" Content="Tárgyak" Margin="10" Click="ItemekBTN_Click"/>
            <Button Name="AnomaliakBTN" Content="Anomáliák" Margin="10" Click="AnomaliakBTN_Click"/>
            <Button Name="TraitekBTN" Content="Erősítések" Margin="10" Click="TraitekBTN_Click"/>
            <Button Name="CsapatTervezoBTN" Content="Csapat tervező" Margin="10" Click="CsapatTervezoBTN_Click"/>
            <Button Name="KilepesBTN" Content="Kilépés" Margin="10" Click="KilepesBTN_Click"/>
            <Button Name="KijelentkezesBTN" Content="Kijelentkezés" Margin="10" Click="KijelentkezesBTN_Click"/>
        </StackPanel>

        <!-- Karakterek listája kártyákkal -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="KarakterListBox">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="10">
                            <Border x:Name="FrontCard" Background="LightGreen" BorderBrush="Black" BorderThickness="1" Padding="10" Width="150" Height="200" MouseDown="FrontCard_MouseDown">
                                <StackPanel>
                                    <Image Source="{Binding Characterimageblob}" Height="100" Stretch="Uniform"/>
                                    <TextBlock x:Name="CharacterNameText" Text="{Binding CharacterName}" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="{Binding Cost}" FontSize="14"/>
                                </StackPanel>
                            </Border>

                            <Border x:Name="BackCard" Background="CadetBlue" BorderBrush="Black" Padding="10" Width="150" Height="200" Visibility="Collapsed" MouseDown="BackCard_MouseDown">
                                <DockPanel>
                                    <Image Source="{Binding Characterimageblob}" Height="100" Stretch="Uniform"/>
                                    <StackPanel>
                                        
                                        <TextBlock Text="{Binding CharacterName}" FontWeight="Bold" FontSize="16"/>
                                        
                                        <TextBlock Text="{Binding Cost}" FontSize="14"/>
                                        
                                        <TextBlock  Text="Képesség: " FontWeight="Bold"/>
                                        <TextBlock  Text="{Binding AbilityName}"/>
                                        <TextBlock Text="{Binding Ability}" TextWrapping="Wrap"/>

                                        <DockPanel>
                                            <TextBlock FontWeight="Bold" Text="Életerő 1. szinten: "/>
                                            <TextBlock Text="{Binding Health}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock FontWeight="Bold" Text="Életerő 2. szinten: "/>
                                            <TextBlock Text="{Binding Health1}"/>
                                        </DockPanel>
                                        
                                        <DockPanel>
                                            <TextBlock FontWeight="Bold" Text="Életerő 3. szinten: "/>
                                            <TextBlock Text="{Binding Health2}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock FontWeight="Bold" Text="Támadási sebesség: "/>
                                            <TextBlock Text="{Binding AttackSpeed}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock FontWeight="Bold" Text="Sebzés 1. szinten: "/>
                                            <TextBlock Text="{Binding Damage}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock FontWeight="Bold" Text="Sebzés 2. szinten: "/>
                                            <TextBlock Text="{Binding Damage1}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock FontWeight="Bold" Text="Sebzés 3. szinten: "/>
                                            <TextBlock Text="{Binding Damage2}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock FontWeight="Bold" Text="Varázserő: "/>
                                            <TextBlock Text="{Binding AbilityPower}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock FontWeight="Bold" Text="Kezdő mana: "/>
                                            <TextBlock Text="{Binding ManaStart}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock FontWeight="Bold" Text="Maximális mana: "/>
                                            <TextBlock Text="{Binding ManaMax}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock FontWeight="Bold" Text="Páncél: "/>
                                            <TextBlock Text="{Binding Armor}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock FontWeight="Bold" Text="Varázsellenállás: "/>
                                            <TextBlock Text="{Binding MagicResist}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock FontWeight="Bold" Text="Hatótávolság: "/>
                                            <TextBlock Text="{Binding Range}"/>
                                        </DockPanel>
                                    </StackPanel>
                                </DockPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
