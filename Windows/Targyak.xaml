<Window x:Class="Karbantarto.Windows.Targyak"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:local="clr-namespace:Karbantarto.Windows"
                mc:Ignorable="d"
        Title="Targyak" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Oldalsáv -->
            <ColumnDefinition Width="*"/>
            <!-- Tartalom -->
        </Grid.ColumnDefinitions>


        <!-- Oldalsáv -->
        <StackPanel Grid.Column="0" Background="LightBlue" Width="200">

            <Button Name="FoOldalBTN"  Content="Főoldal" Margin="10,20,10,10" Click="FoOldalBTN_Click"/>

            <Button Name="KarakterekBTN" Content="Karakterek" Margin="10" Click="KarakterekBTN_Click"/>

            <Button Name="ClassokBTN" Content="Osztályok" Margin="10" Click="ClassokBTN_Click"/>

            <Button Name="ItemekBTN" Content="Tárgyak" Margin="10" Click="ItemekBTN_Click"/>

            <Button Name="AnomaliakBTN" Content="Anomáliák" Margin="10" Click="AnomaliakBTN_Click"/>

            <Button Name="TraitekBTN" Content="Erősítések" Margin="10" Click="TraitekBTN_Click"/>

            <Button Name="CsapatTervezoBTN" Content="Csapat tervező" Margin="10" Click="CsapatTervezoBTN_Click"/>

            <Button Name="KilepesBTN" Content="Kilépés" Margin="10" Click="KilepesBTN_Click"/>

            <Button Name="KijelentkezesBTN" Content="Kijelentkezés" Margin="10" Click="KijelentkezesBTN_Click"/>

        </StackPanel>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1">
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="FelTargyListBox">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="10">
                            <Border x:Name="FrontCard" Background="LightGreen" BorderBrush="Black" BorderThickness="1" Padding="10" Width="150" Height="200" MouseDown="FrontCard_MouseDown">
                                <StackPanel>
                                    <Image Source="{Binding HalfItemimageblob}" Height="100" Stretch="Uniform"/>
                                    <TextBlock x:Name="CharacterNameText" Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                                </StackPanel>
                            </Border>

                            <Border x:Name="BackCard" Background="CadetBlue" BorderBrush="Black" Padding="10" Width="150" Height="200" Visibility="Collapsed" MouseDown="BackCard_MouseDown">
                                <DockPanel>
                                    <Image Source="{Binding HalfItemimageblob}" Height="100" Stretch="Uniform"/>
                                    <StackPanel>

                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>

                                        <TextBlock Text="{Binding Effect}" FontSize="14"/>
                                        

                                    </StackPanel>
                                </DockPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
        </ScrollViewer>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1">
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="TeljesTargyListBox">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="10">
                            <Border x:Name="FrontCard" Background="LightSkyBlue" BorderBrush="Black" BorderThickness="1" Padding="10" Width="150" Height="250" MouseDown="FrontCard_MouseDown">
                                <StackPanel>
                                    <Image Source="{Binding Fullitemimageblob}" Height="100" Stretch="Uniform"/>
                                    <TextBlock x:Name="FullItemNameText" Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                                </StackPanel>
                            </Border>

                            <Border x:Name="BackCard" Background="LightSteelBlue" BorderBrush="Black" Padding="10" Width="150" Height="250" Visibility="Collapsed" MouseDown="BackCard_MouseDown">
                                <DockPanel>
                                    <Image Source="{Binding Fullitemimageblob}" Height="100" Stretch="Uniform"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                                        <TextBlock Text="{Binding Halfitemeffect1}" FontSize="14"/>
                                        <TextBlock Text="{Binding Halfitemeffect2}" FontSize="14"/>
                                        <TextBlock Text="{Binding Bonuseffect}" FontSize="14"/>
                                        <TextBlock Text="{Binding Bonuseffect1}" FontSize="14"/>
                                        <TextBlock Text="{Binding Bonuseffect2}" FontSize="14"/>
                                        <TextBlock Text="{Binding ActiveEffect}" FontSize="14"/>
                                    </StackPanel>
                                </DockPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        </Border>
    </Grid>
</Window>
